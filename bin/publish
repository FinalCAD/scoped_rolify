#!/usr/bin/env ruby

# bin/publish 0.0.1

class Publish

  def start version
    system "bundle && bundle exec spec"
    system "gem build scopable.gemspec"
    system "git tag -a v#{version} -m 'version #{version}'"
    system "git push --tags"
    system "gem push scopable-#{version}.gem"
    system "git push origin master"
  end

end

if ARGV.length != 1 # or !ARGV[0].match(/\d{1,3}.\d{1,3}.\d{1,3}/)
  puts 'HELP: '
  puts '$ bin/publish 0.0.1'
  exit 0
end

Publish.new.start ARGV[0]